<!DOCTYPE html>
<html lang="en">

<head>
	<!-- importent meta tags-->
	<meta charset="utf-8">
	<meta http-equiv="Content-Type" content="text/html; charset = utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Title-->
	<title>Sudipta's portal</title>
	<!-- icon-->
	<link rel="icon" href="/pic/icon.ico">
	<!-- bootstrap-->
	<link rel="stylesheet" href="/css/033%20bootstrap.css">
	<!--font awasome-->
	<link rel="stylesheet" href="/css/font-awesome/css/font-awesome.min.css">
	<!--google font-->
	<link href="https://fonts.googleapis.com/css?family=Bree+Serif|Indie+Flower|Varela+Round&display=swap" rel="stylesheet">
	<!--owl carousel-->
	<link href="/css/owl.carousel.min.css " rel="stylesheet">
	<link href="/css/owl.theme.default.min.css" rel="stylesheet">
	<!-- main css-->
	<link rel="stylesheet" href="/css/admin.css">
	<!--responsive-->
	<link rel="stylesheet" href="/css/responsive.css">
	<!--animation-->
	<link rel="stylesheet" href="/css/animate.css">


</head>

<body style="background-color: #F6EFEE;">
	<!-- Login-->
	<section id="about">
		<div class="content-box-lg">
			<div class="container wow slideInLeft">
				<div class="row ">
					<div class="col-md-12" id="about_hr">
						<h2 id="aboutt">Forget password</h2>
						<hr>
					</div>
				</div>
			</div>
			<% if(for_otp) { %>
			<div class="container edit_page" id="about_sub">
				<div class="row wow slideInRight">
				<h2>OTP has been send to your email</h2>
				<p style="color:red"><%=status%></p>
				<form data-toggle="validator" method="POST" action="/auth/validate_otp">
					<div class="col-md-2">
						<label for="usr">OTP:</label>
  						<input type="text" name="otp" class="form-control"required>
					</div>
					<div class="col-md-4">
						<label for="usr">New Password:</label>
  						<input type="password" name="password" class="form-control" id="password" required>
					</div>
					<div class="col-md-4">
						<label for="usr">Re-New Password:</label>
  						<input type="password" class="form-control" name="confirm" required>
					</div>
					<div class="col-md-2">
						<label for="usr"></label>
						<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Submit</button>
					</div>
				</form>
				</div>
			</div>
			<% } %>
			<% if(for_req) { %>
			<!--Request for forget-->
			<div class="container edit_page" id="about_sub">
					<div class="row wow slideInRight">
					<h2>Step 1 for forget Password</h2>
					<form method="POST" action="/auth/req_otp">
						<div class="col-md-4">
							<label for="usr">Enter email:</label>
							  <input type="text" name="email_s" class="form-control" required>
						</div>
						<div class="col-md-2">
							<label for="usr"></label>
							<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Submit</button>
						</div>
					</form>
					</div>
				</div>
				<% } %>
		</div>
	</section>
	<!--jQuery-->
	<script src="/js/jquery.js"></script>
	<!--bootstarp-->
	<script src="/js/033%20bootstrap.js"></script>
	<!--way point-->
	<script src="/js/jquery.waypoints.min.js"></script>
	<!--owl carousel-->
	<script src="/js/owl.carousel.min.js"></script>
	<!-- smooth scroll jquery easy plagin-->
	<script src="/js/130%20jquery.easing.1.3.js"></script>
	<!--wow -->
	<script src="/js/wow.min.js"></script>
	<!-- main js-->
	<script src="/js/main.js"></script>

</body>

</html>