<!DOCTYPE html>
<html lang="en">

<head>
	<!-- importent meta tags-->
	<meta charset="utf-8">
	<meta http-equiv="Content-Type" content="text/html; charset = utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Title-->
	<title>Sudipta's portal</title>
	<!-- icon-->
	<link rel="icon" href="/pic/icon.ico">
	<!-- bootstrap-->
	<link rel="stylesheet" href="/css/033%20bootstrap.css">
	<!--font awasome-->
	<link rel="stylesheet" href="/css/font-awesome/css/font-awesome.min.css">
	<!--google font-->
	<link href="https://fonts.googleapis.com/css?family=Bree+Serif|Indie+Flower|Varela+Round&display=swap" rel="stylesheet">
	<!--owl carousel-->
	<link href="/css/owl.carousel.min.css " rel="stylesheet">
	<link href="/css/owl.theme.default.min.css" rel="stylesheet">
	<!-- main css-->
	<link rel="stylesheet" href="/css/admin.css">
	<!--responsive-->
	<link rel="stylesheet" href="/css/responsive.css">
	<!--animation-->
	<link rel="stylesheet" href="/css/animate.css">


</head>

<body data-spy="scroll" data-target=".navbar" data-offset="65">
	<!--loding-->
	<div id="loding">
		<div id="status">
			&nbsp;
		</div>
	</div>
	<!--end loding-->
	<!--navigation bar-->
	<header>
		<nav class="navbar navbar-fixed-top">
			<div class="container-fluid">
				<div class="site-nav-wrapper">
					<div class="navbar-header">
						<!--mobile menu open Button-->
						<span id="mobile-nav-open-btn">&#9776</span>
						<!-- logo-->
						<h1></h1>
					</div>
					<div class="container">
						<div class="collapse navbar-collapse">
							<ul class="nav navbar-nav pull-right">
								<li><a class="Smooth-scroll" href="#about">About</a></li>
								<li><a class="Smooth-scroll" href="#project">Project</a></li>
								<li><a class="Smooth-scroll" href="#blog">Blog</a></li>
								<li><a class="Smooth-scroll" href="#contact">Message</a></li>
								<li><a href="/auth/logout">Logout</a></li>
							</ul>
						</div>
					</div>
					<!--mobile menu-->
					<div id="mobile-nav">
						<span id="mobile-nav-close-btn">&times;</span>
						<div id="mobile-nav-content">
							<ul class="nav">
								<li><a class="Smooth-scroll" href="#about">About</a></li>
								<li><a class="Smooth-scroll" href="#project">Project</a></li>
								<li><a class="Smooth-scroll" href="#blog">Blog</a></li>
								<li><a class="Smooth-scroll" href="#contact">Message</a></li>
								<li><a href="/auth/logout">Logout</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</nav>
	</header>
	<!--end navigation bar-->
	<!-- About section-->
	<section id="about">
		<div class="content-box-lg">
			<div class="container wow slideInLeft">
				<div class="row ">
					<div class="col-md-12" id="about_hr">
						<h2 id="aboutt">About</h2>
						<hr>
					</div>
				</div>
			</div>
			<h2>Profile Picture</h2>
			<div class="container" id="about_sub">
			<!--profile pic-->
				<div class="row wow slideInRight">
					<div class="col-md-6">
						<div id="profile_pic" class="float-left">
								<picture>
									<img src="<%=about.profile_pic%>" class="rounded-circle" alt="...">
								</picture>
						</div>
					</div>
					<div class="col-md-6">
						<div class="row" class="float-left">
							<div class="col-md-12">
								<h3>Upload</h3>
							</div>
						</div>
						<hr>
						<div class="row" class="float-left">
							<form method="POST" action="/admin/update_profile_pic" enctype="multipart/form-data">
							<div class="col-md-6">
								<input type="file" name="image" class="form-control" required>
							</div>
							<div class="col-md-3">
								<input type="hidden" value="<%= about.profile_pic %>" name="image_url">
								<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Upload</button>
							</div>
							</form>
						</div>
					</div>
				</div>
				<!--end profile pic-->
				<!-- education-->
				<div class="row wow slideInRight">
					<div class="col-md-8">
						<h3> Education</h3>
						<hr>
					</div>
				</div>
				<div class="row wow slideInRight">
				<form action="./admin/add_degree" method="POST">
					<div class="col-md-5">
						<label for="usr">Degree:</label>
  						<input type="text" name="degree" class="form-control" required>
					</div>
					<div class="col-md-5">
						<label for="usr">College Name:</label>
  						<input type="text" name="clg_name" class="form-control" required>
					</div>
					<div class="col-md-2">
						<label for="usr"></label>
						<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Add</button>
					</div>
				</form>
				</div>
				<hr>
				<% for (let edu of education) { %>
				<div class="row wow slideInRight">
					<div class="col-md-8">
						<h3><%=edu.degree%></h3>
						<h4><%=edu.clg_name%></h4>
					</div>
					<div class="col-md-2">
						<form method="POST" action="./admin/edit_degree">
						<input type="hidden" value="<%= edu.id %>" name="degree_id">
						<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Edit</button>
						</form>
					</div>
					<div class="col-md-2">
						<form method="POST" action="./admin/delete_degree">
						<input type="hidden" value="<%= edu.id %>" name="degree_id">
						<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Delete</button>
						</form>
					</div>
				</div>
				<% } %>
				<!-- end education-->
				<!-- Skill bar-->
				<div class="row wow slideInRight">
					<div class="col-md-8">
						<h3> Skill</h3>
						<hr style="background-color: #ef4a55; height: 2px;">
					</div>
				</div>
				<div class="row wow slideInRight">

				<form action="./admin/add_skill" method="POST">
					<div class="col-md-3">
						<label for="usr">Skill:</label>
  						<input type="text" name="skill_name" class="form-control" required>
					</div>
					<div class="col-md-1">
						<label for="usr">Persentage:</label>
  						<input type="number" name="skill_persent" class="form-control" required>
					</div>
					<div class="col-md-1">
						<label for="usr"></label>
						<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Add</button>
					</div>
				</form>

				</div>
				<hr>
				<% for (let skil of skill) { %>
				<div class="row wow slideInRight">
					<div class="col-md-6">
						<h3><%=skil.sk%></h3>
					</div>
					<div class="col-md-2">
						<h4><%=skil.value%></h4>
					</div>
					<div class="col-md-2">
						<form method="POST" action="./admin/delete_skill">
						<input type="hidden" value="<%= skil.id %>" name="skill_id">
						<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Delete</button>
						</form>
					</div>
				</div>
				<% } %>
				<!--end Skill bar-->
				<hr>
				<div class="row wow slideInRight">
				<!-- objective-->
					<div class="col-md-6">
						<form method="POST" action="./admin/objective_update">
						<textarea id="materialContactFormMessage" name="objective" class="form-control md-textarea" rows="3" required><%=about.objective%></textarea>
						<label class="form-check-label" for="materialContactFormMessage">Objective</label>
						<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Update</button>
						</form>
					</div>
					<!--end objective-->
					<!--skill note-->
					<div class="col-md-6">
					<form method="POST" action="./admin/skill_note_update">
						<textarea id="materialContactFormMessage" name="SkillNote" class="form-control md-textarea" rows="3" required><%=about.skill_note%></textarea>
						<label class="form-check-label" for="materialContactFormMessage">Skill Note</label>
						<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Update</button>
					</form>
					</div>
				</div>
				
			</div>
		</div>
	</section>
	<!-- end About section-->
	<!-- poject section-->
	<section id="project">
		<div class="content-box-lg">
			<div class="container">
				<div class="row wow zoomIn">
					<div class="col-md-12 project_hr">
						<h3>Projects</h3>
						<hr>
					</div>
				</div>
			</div>
			<div class="container wow lightSpeedIn">
				<div class="row wow slideInRight">
					<form action="./admin/add_project" method="POST" enctype="multipart/form-data">
					<div class="col-md-2">
						<label for="usr">Image</label>
						<input type="file" name="image" class="form-control" required>
					</div>
					<div class="col-md-3">
						<label for="usr">Title:</label>
  						<input type="text" name="title" class="form-control" required>
					</div>
					<div class="col-md-4">
						<label for="materialContactFormMessage">Description</label>
						<textarea id="materialContactFormMessage" name="description" class="form-control md-textarea" rows="3" required></textarea>
					</div>
					<div class="col-md-2">
						<label for="usr">Link:</label>
  						<input type="text" name="link" class="form-control" required>
					</div>
					<div class="col-md-1">
						<label for="usr"></label>
						<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Add</button>
					</div>
					</form>
				</div>
				<hr>
				<% for (let pro of project) { %>
				<div class="row wow slideInRight">
					<div class="col-md-8">
						<h3><%= pro.project_name %></h3>
					</div>
					<div class="col-md-2">
						<form method="POST" action="./admin/edit_project">
						<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Edit</button>
						<input type="hidden" value="<%= pro.id %>" name="project_id">
						</form>
					</div>
					<div class="col-md-2">
						<form action="./admin/delete_project" method="POST">
						<input type="hidden" value="<%= pro.id %>" name="project_id">
						<input type="hidden" value="<%= pro.project_pic %>" name="image_url">
						<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Delete</button>
						</form>
					</div>
				</div>
				<% } %>
			</div>
		</div>
		<div id="border-strip"></div>
	</section>
	<!--blog section-->
	<section id="blog" class="blog">
		<div class="content-box-lg blogger" id="blogg">
			<div class="container">
				<div class="row wow zoomIn">
					<div class="col-md-12 project_hr hr">
						<h1>Blog</h1>
						<hr>
					</div>
				</div>
				<form action="./admin/add_blog" method="POST" enctype="multipart/form-data">
					<div class="row wow slideInRight">
						<div class="col-md-2">
							<label for="usr">Select an Image</label>
							<input type="file" name="image" class="form-control" required>
						</div>
						<div class="col-md-3">
							<label for="usr">Title:</label>
							<input type="text" name="title" class="form-control" id="usr" required>
						</div>
						<div class="col-md-6">
							<label for="materialContactFormMessage">Description:</label>
							<textarea id="materialContactFormMessage" name="description" class="form-control md-textarea" rows="3" required></textarea>
						</div>
						<div class="col-md-1">
							<label for="usr"></label>
							<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Add</button>
						</div>
					</div>
				</form>
				<hr>
				<% for (let blg of blog) { %>
				<div class="row wow slideInRight">
					<div class="col-md-8">
						<h3><%=blg.title%></h3>
					</div>
					<div class="col-md-2">
						<form action="./admin/edit_blog" method="POST">
						<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Edit</button>
						<input type="hidden" value="<%= blg.id %>" name="blog_id">
						</form>
					</div>
					<div class="col-md-2">
						<form action="./admin/delete_blog" method="POST">
						<input type="hidden" value="<%= blg.id %>" name="blog_id">
						<input type="hidden" value="<%= blg.imageUrl %>" name="image_url">
						<button class="btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Delete</button>
						</form>
					</div>
				</div>
				<% } %>
			</div>
		</div>
		<div id="border-strip"></div>
	</section>
	<!-- end blog section-->
	<!--contact me -->
	<section id="contact">
		<div class="content-box-lg">
			<div class="container">
				<div class="row wow zoomIn">
					<div class="col-md-12 project_hr hr">
						<h1>New Message</h1>
						<hr>
					</div>
					<% for (let new_msg of new_messege) { %>
					<div class="col-md-12">
						<p>Name:<%=new_msg.name %> |Email:<%=new_msg.email %>  | Date:<%=new_msg.createdAt %>  </p>	
						<p><%=new_msg.message %> </p>
						<form method="POST" action="./admin/readed_message">
						<input type="hidden" value="<%= new_msg.id %>" name="contact_id">
						<button class=" bbnt btn btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Readed</button>
						</form>
					</div>
					<% } %>
				</div>
				<div class="row wow zoomIn">
					<div class="col-md-12 project_hr hr">
						<h1>Old Message</h1>
						<hr>
					</div>
					<% for (let old_msg of old_message) { %>
					<div class="col-md-12">
						<p>Name:<%=old_msg.name%> |Email:<%=old_msg.email%>  | Date:<%=old_msg.createdAt%>  </p>	
						<p><%=old_msg.message%> </p>
						<form method="POST" action="./admin/delete_message">
						<input type="hidden" value="<%= old_msg.id %>" name="contact_id">
						<button class="btn bbnt btn-send btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Delete</button>
						</form>
					</div>
					<% } %>
				</div>
			</div>
		</div>
	</section>
	<!--end contact me -->
	<!-- footer section-->
	<footer class="text-center">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<p>
						Copyright &copy 2019 All Rights Reserved by <span> SUDIPTA DAS</span>
					</p>
				</div>
			</div>
		</div>
	</footer>
	<!--end footer section-->
	<!--jQuery-->
	<script src="/js/jquery.js"></script>
	<!--bootstarp-->
	<script src="/js/033%20bootstrap.js"></script>
	<!--way point-->
	<script src="/js/jquery.waypoints.min.js"></script>
	<!--owl carousel-->
	<script src="/js/owl.carousel.min.js"></script>
	<!-- smooth scroll jquery easy plagin-->
	<script src="/js/130%20jquery.easing.1.3.js"></script>
	<!--wow -->
	<script src="/js/wow.min.js"></script>
	<!-- main js-->
	<script src="/js/main.js"></script>

</body>

</html>